<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.livescorecard">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.LiveScorecard">
        <activity android:name=".FootballSummary"></activity>
        <activity android:name=".Football" />
        <activity android:name=".badmintonMatchDetails" />
        <activity android:name=".Badminton" />
        <activity android:name=".AdminCricketUpdate" />
        <activity android:name=".AdminCricketCreateNewMatch" />
        <activity android:name=".AdminCricket" />
        <activity android:name=".AdminDashboard" />
        <activity android:name=".AdminLogin" />
        <activity android:name=".Dashboard" />
        <activity
            android:name=".matchSummary"
            android:label="@string/title_activity_match_summary"
            android:theme="@style/Theme.LiveScorecard.NoActionBar" />
        <activity
            android:name=".Cricket"
            android:label="@string/title_activity_match_summary"
            android:theme="@style/Theme.LiveScorecard.NoActionBar" />
        <activity
            android:name=".LoginActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.LiveScorecard.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>