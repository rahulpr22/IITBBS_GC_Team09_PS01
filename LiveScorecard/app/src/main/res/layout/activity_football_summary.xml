<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AdminCricketCreateNewMatch">


    <RelativeLayout
        android:layout_width="match_parent"
        android:id="@+id/rlvw1"
        android:background="@drawable/text_bg"
        android:layout_height="match_parent">
        <TextView
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:text="Team1 Goals"
            android:textColor="@color/white"
            android:gravity="center_vertical|center"
            android:id="@+id/f1Name"
            />



        <ListView
            android:id="@+id/f1grid1"
            android:layout_below="@+id/f1Name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:horizontalSpacing="10dp"
            android:layout_centerHorizontal="true"
            android:numColumns="2"

            android:verticalSpacing="10dp"
            android:gravity="center"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="15dp"
            android:dividerHeight="10.0sp"
            />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@drawable/text_bg"

        android:layout_height="match_parent">
        <TextView
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:text="Team2 Goals"
            android:textColor="@color/white"
            android:gravity="center_vertical|center"
            android:id="@+id/f2Name"
            />



        <ListView
            android:id="@+id/f2grid1"
            android:layout_below="@+id/f2Name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:horizontalSpacing="10dp"
            android:layout_centerHorizontal="true"
            android:numColumns="2"

            android:verticalSpacing="10dp"
            android:gravity="center"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="15dp"
            android:dividerHeight="10.0sp"
            />
    </RelativeLayout>

</ScrollView>

